## timeshift
sudo apt-add-repository -y ppa:teejee2008/ppa
sudo apt-get update
sudo apt-get install timeshift

## vim
sudo apt-get install -y vim

## redshift
sudo apt-get install redshift redshift-gtk

## unity-tweak-tools
sodu apt-get install -y unity-tweak-tools

## arch theme
sudo add-apt-repository -y ppa:noobslab/themes
sudo apt-get update
sudo apt-get install -y arc-theme

## MEGAsync
wget https://mega.nz/linux/MEGAsync/xUbuntu_16.04/amd64/megasync-xUbuntu_16.04_amd64.deb
sudo apt-get install libtinyxml2-2v5 libc-ares2 libcrypto++9v5 libmediainfo0v5 libqt4-svg libzen0v5
dpkg -i megasync-xUbuntu_16.04_amd64.deb

## Spotify
sudo apt-key adv --keyserver hkp://keyserver.ubuntu.com:80 --recv-keys BBEBDCB318AD50EC6865090613B00F1FD2C19886 0DF731E45CE24F27EEEB1450EFDC8610341D9410
echo deb http://repository.spotify.com stable non-free | sudo tee /etc/apt/sources.list.d/spotify.list
sudo apt-get update
sudo apt-get install spotify-client

## R dependencies:
sudo apt-get install -y libssl-dev libxml2-dev libssh2-1-dev libcurl4-openssl-dev

## R
sudo apt-key adv --keyserver keyserver.ubuntu.com --recv-keys E298A3A825C0D65DFD57CBB651716619E084DAB9
sudo add-apt-repository 'deb [arch=amd64,i386] https://cran.rstudio.com/bin/linux/ubuntu xenial/'
sudo apt-get update
sudo apt-get install r-base

## Miniconda:
cd /tmp
wget https://repo.continuum.io/miniconda/Miniconda3-latest-Linux-x86_64.sh
bash Miniconda3-latest-Linux-x86_64.sh
rm Miniconda3-latest-Linux-x86_64.sh
cd ~/

